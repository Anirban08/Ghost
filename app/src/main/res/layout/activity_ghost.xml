<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.ghost.GhostActivity">

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="505dp"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="3dp">
        "
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/ghost_text"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="TextView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="29dp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/ghost_status"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="TextView"
            android:layout_below="@+id/ghost_text"
            android:layout_alignParentStart="true"
            android:layout_marginTop="38dp"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/btn_c"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="Challenge"
            android:layout_alignTop="@+id/score"
            android:layout_alignParentStart="true"
            android:layout_marginTop="106dp" />

        <Button
            android:id="@+id/btn_r"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_c"
            android:layout_alignBottom="@+id/btn_c"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="61dp"
            android:text="Restart" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="TextView"
            android:layout_below="@+id/ghost_status"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
